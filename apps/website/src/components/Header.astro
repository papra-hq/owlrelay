---
import { cn } from '../utils/cn';

const socials = [
  {
    name: 'GitHub',
    url: 'https://github.com/papra-hq/owlrelay',
    icon: 'i-tabler-brand-github',
  },
  {
    name: 'Discord',
    url: 'https://discord.gg/8UPjzsrBNF',
    icon: 'i-tabler-brand-discord',
  },
];

const navigation: { name: string; url: string }[] = [];
---

<nav
  class="z-60 border-0 border-b md:max-w-4xl pl-4 pr-3 py-4 mx-auto flex items-center justify-between md:(py-2 border-1px rounded-full mt-4) fixed top-0 left-0 right-0 z-70 bg-card bg-op-40 backdrop-blur-sm"
>
  <div class="flex items-center gap-4">
    <a href="/" class="text-lg font-bold flex items-center group">
      <div class="i-custom-owl size-6 group-hover:rotate-25deg transition transform"></div>
      <span class="ml-2">OwlRelay</span>
    </a>

    <p class="hidden md:block text-sm text-foreground font-medium">Simple email to HTTP service</p>
  </div>

  <div class="items-center gap-6 hidden md:flex">
    {
      navigation.map(nav => (
        <a href={nav.url} class="text-sm font-bold hover:text-primary transition" target="_blank">
          {nav.name}
        </a>
      ))
    }
  </div>

  <div class="flex items-center gap-4">
    <div class="hidden md:flex items-center gap-4">
      {
        socials.map(social => (
          <a href={social.url} target="_blank" rel="noopener noreferrer" class=" hover:text-primary transition" aria-label={social.name}>
            <div class={cn('size-5', social.icon)} />
          </a>
        ))
      }
    </div>

    <div class="flex items-center gap-2">
      <a class="flex gap-1.5 items-center font-bold py-1.5 px-3 text-sm transition hover:underline" href="https://app.owlrelay.email/register" target="_blank"> Login </a>

      <a
        class="flex gap-1.5 items-center bg-primary font-bold py-1.25 px-3 rounded-xl text-primary-foreground text-sm transition hover:bg-primary/80"
        href="https://app.owlrelay.email/register"
        target="_blank"
      >
        Register
        <div class="i-tabler-login-2 size-4"></div>
      </a>
    </div>
  </div>
</nav>
