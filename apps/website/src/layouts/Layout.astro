---
import CookieConsentBanner from '../components/CookieConsentBanner.astro';
import PosthogAnalytics from '../components/PosthogAnalytics.astro';
import '../styles/app.css';

const appName = 'OwlRelay';
const shortDescription = 'Your open-source email to http, trigger your webhooks by sending emails to generated addresses.';
const longDescription = 'The open-source email to http, trigger your webhooks by sending emails to generated addresses.';
const appUrl = 'https://owlrelay.email';
const heading = `${appName} - ${shortDescription}`;
const ogImage = 'https://owlrelay.email/og-image.png';
const ogImageAlt = `${appName} - ${shortDescription}`;
const ogImageWidth = '1200';
const ogImageHeight = '630';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{heading}</title>
    <meta name="description" content={longDescription} />

    <meta property="og:title" content={appName} />
    <meta property="og:description" content={longDescription} />
    <meta property="og:url" content={appUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content={ogImageAlt} />
    <meta property="og:image:width" content={ogImageWidth} />
    <meta property="og:image:height" content={ogImageHeight} />
    <meta property="og:site_name" content={appName} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@cthmsst" />
    <meta name="twitter:title" content={appName} />
    <meta name="twitter:description" content={longDescription} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={ogImageAlt} />

    <link rel="author" href="humans.txt" />
    <link rel="canonical" href={appUrl} />

    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <PosthogAnalytics />
  </head>
  <body class="bg-background font-sans antialiased min-h-screen text-foreground text-sm relative" data-kb-theme="light">
    <slot />
    <CookieConsentBanner />
  </body>
</html>
